@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="~/Scripts/libs/jquery/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/libs/pages/index.js"></script>
    <script src="//cdn.ckeditor.com/4.5.1/standard/ckeditor.js"></script>
    

    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
    <link href="@Url.Content("~/Styles/StyleSheet.css")" rel="stylesheet" type="text/css" />

</head>
<body>
    <div id="header">
        <h1>My Blog</h1>
        <div id="userLabel">
            Guest
        </div>
        <div id="login">
            <input class="general-button" type='button' value='Register' onclick='window.location = "@Url.Action("Index","Register")    ";' />
            <input class="general-button" type='button' value='Login' onclick='window.location = "@Url.Action("Index","Home")    ";' />
        </div>
    </div>
    <div id="mainBody">
        <div id ="menuPlaceholder">
        <ul class="menu">
                <li>@Html.ActionLink("Створити нову статтю", "Create", "Home")</li>
                <li>@Html.ActionLink("View posted articles", "Index", "Home")</li>
                <li>@Html.ActionLink("Ваша сторінка", "UsersArticles", "Home")</li>
            </ul>
        </div>
        <div id="mainContent">
           @RenderBody() 
        </div>
    </div>
</body>
</html>
